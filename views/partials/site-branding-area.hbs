<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <div class="logo">
                <h1><a href="/"><img width="100" height="100"  src="img/logo.jpg"></a></h1>
            </div>
        </div>

        <div class="col-sm-7">
            {{>search-bar}}
        </div>

        {{#if login}}
            <div class="shopping-item" style="background-color: white">
                <button type="button" style="background-color: white; border-color: white; color: black" class="btn btn-primary" data-toggle="modal" data-target="#userProfileModal">Thông tin cá nhân<i class="fa fa-user"></i></button>
            </div>
            <div class="modal fade" id="userProfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Thông tin cá nhân</h5>
                        </div>
                        <div class="modal-body">
                            <div class="col-sm-2 col-md-2">
                                <img src="img/customer logo.png"
                                     alt="" class="img-rounded img-responsive" />
                            </div>
                            <blockquote>
                                <p>{{curCustomer.info.name}}</p>
                                <small><cite title="Source Title">{{curCustomer.info.address}}<i class="glyphicon glyphicon-map-marker"></i></cite></small>
                            </blockquote>
                            <p>
                                <i class="glyphicon glyphicon-envelope"></i>&nbsp;&nbsp;{{curCustomer.email}}
                                <br/> <i class="fa fa-phone"></i>&nbsp;&nbsp;{{curCustomer.info.sdt}}

                            </p>
                        </div>
                        <div class="modal-footer">
                            <a href="/changePassword"><button type="button" class="btn btn-primary">Đổi mật khẩu</button></a>
                            <a href="/updateProfile"><button type="button" class="btn btn-primary">Chỉnh sửa</button></a>
                            <a href="/orders"><button type="button" class="btn btn-success">Các đơn hàng</button></a>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
        {{#if session.cart}}
            <div class="col-sm-10">
                <div class="shopping-item">
                    <a href="/cart">Giỏ hàng - <span class="cart-amunt">{{formatCurrency session.cart.totalPrice}}</span>
                        <i class="fa fa-shopping-cart"></i>
                        <span class="product-count">{{session.cart.totalQty}}</span>
                    </a>
                </div>
            </div>
        {{/if}}
    </div>
</div>